<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie add</title>
    <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
    <h1 class="titulo">Agregar Película</h1>
    <br>
    <section class="formulario">
        <form action="/movies/create" method="POST">
            <label for="title">Title </label>
            <p><input type="text" name="title" id="" value="<%=locals.old && old.title%>"></p>
            <% if (locals.errors && errors.title) { %>
                <p><span class="error"><%= errors.title.msg %></span></p>
            <% } %>
            
            <label for="rating">Rating </label>
            <p><input type="number" name="rating" id="" value="<%=locals.old && old.rating%>"></p>
            <% if (locals.errors && errors.rating) { %>
                <p><span class="error"><%= errors.rating.msg %></span></p>
            <% } %>

            <label for="awards">Awards </label>
            <p><input type="number" name="awards" id="" value="<%=locals.old && old.awards%>"></p>
            <% if (locals.errors && errors.awards) { %>
                <p><span class="error"><%= errors.awards.msg %></span></p>
            <% } %>
            
            <label for="release_date">Release date </label>
            <p><input type="date" name="release_date" id="" value="<%=locals.old && old.release_date%>"></p>
            <% if (locals.errors && errors.release_date) { %>
                <p><span class="error"><%= errors.release_date.msg %> </span></p>
            <% } %>
            
            <label for="length">Length </label>
            <p><input type="number" name="length" id=""></p>
            <label for="genreID">Genre </label>
            <p>
                <select name="genre_id" id="">
                    <option value="" disabled selected>- select genre - </option>
                    <% allGenres.forEach(genre => { %>
                    <option value="<%= genre.id %>"><%= genre.name %></option>
                    <% }); %>
                </select>
            </p>
            <% if (locals.errors && errors.genre_id) { %>
                <p><span class="error"><%= errors.genre_id.msg %> </span></p>
            <% } %>

            <br>
            <p> <button class="botonAgregar" type="submit">Agregar</button>
            
            <a  class="botonVolver" href="/movies">Listado de Películas</a></p>
        </form>
    </section>
    
</body>

</html>